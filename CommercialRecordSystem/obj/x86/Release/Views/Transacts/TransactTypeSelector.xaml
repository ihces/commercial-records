<Page
    x:Class="CommercialRecordSystem.TransactTypeSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CommercialRecordSystem"
    xmlns:CSRControls="using:CommercialRecordSystem.Controls"
    xmlns:CSRPanels="using:CommercialRecordSystem.Panels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Style="{StaticResource PageLayout}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='1' x:Name="backButton" Margin="39,59,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"                         />
            <TextBlock x:Name="pageTitle" Text="Satış Tipi" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="780"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" Width="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"></RowDefinition>
                    <RowDefinition Height="10"></RowDefinition>
                    <RowDefinition Height="60"></RowDefinition>
                    <RowDefinition Height="10"></RowDefinition>
                    <RowDefinition Height="60"></RowDefinition>
                    <RowDefinition Height="20"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="#d74f2a">
                    <TextBlock FontFamily="Segoe UI Symbol" FontSize="28" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right">Genel Satış &#xE017;</TextBlock>
                </Grid>
                <Border Grid.Row="2" BorderBrush="#d74f2a" BorderThickness="3">
                    <Grid Background="#28ffffff">
                        <TextBlock FontFamily="Segoe UI Symbol" FontSize="28" Foreground="#aaaaaa" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right">Ön Spariş &#xE017;</TextBlock>
                    </Grid>
                </Border>
                <Border Grid.Row="4" BorderBrush="#d74f2a" BorderThickness="3">
                    <Grid Background="#28ffffff">
                        <TextBlock FontFamily="Segoe UI Symbol" FontSize="28" Foreground="#aaaaaa" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right">Ödeme &#xE017;</TextBlock>
                    </Grid>
                </Border>
            </Grid>
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="52" />
                </Grid.RowDefinitions>
                <CSRPanels:CRSFormPanel Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Background="#d74f2a">
                            <TextBlock   FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontFamily="Segoe UI Symbol" Text="&#xe184;" TextAlignment="Center" Foreground="White"></TextBlock>
                        </Grid>
                        <Border Grid.Column="1" Background="#28ffffff" BorderBrush="#d74f2a"  BorderThickness="3" >
                            <DatePicker  FontSize="32" FontWeight="SemiBold" MonthFormat="{}{month.integer(2)}" VerticalAlignment="Center" HorizontalAlignment="Center" Date="{Binding Path=SelectedDate, Mode=TwoWay}">
                            </DatePicker>
                        </Border>
                    </Grid>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="60" />
                        </Grid.ColumnDefinitions>
                        <CSRControls:CRSTextBox  Height="60" Grid.Column="0" Input="{Binding Path=SelectedCustomer.Name, Mode=TwoWay}" BorderBrush="#d74f2a" IconHex="&#x1f466;" IconVisibility="Visible" EmptyMessage="İsim" Required="True" InputType="NAME" />
                        <CSRControls:CRSTextBox  Height="60" Grid.Column="2" Input="{Binding Path=SelectedCustomer.Surname, Mode=TwoWay}" BorderBrush="#d74f2a" EmptyMessage="Soyisim" Required="True" InputType="NAME" />
                        <Button Grid.Column="4" Height="60" Width="60" FontFamily="Segoe UI Symbol" FontSize="23" Margin="-3" Content="&#xE11A;" Background="#d74f2a" />
                    </Grid>
                    <CSRControls:CRSTextBox  Height="120" Input="{Binding Path=SelectedCustomer.Address, Mode=TwoWay}" BorderBrush="#d74f2a" IconHex="&#xE141;" IconVisibility="Visible" EmptyMessage="Adres"  Multiline="True" InputType="ALL" />
                    <CSRControls:CRSTextBox Input="{Binding Path=SelectedCustomer.PhoneNumber, Mode=TwoWay}" BorderBrush="#d74f2a" IconHex="&#xE13A;" IconVisibility="Visible" EmptyMessage="Telefon" InputType="PHONENUMBER"  />
                    <CSRControls:CRSTextBox Input="{Binding Path=SelectedCustomer.MobileNumber, Mode=TwoWay}" BorderBrush="#d74f2a" IconHex="&#xE1c9;" IconVisibility="Visible" EmptyMessage="Cep Telefonu" InputType="PHONENUMBER" />
                    <Grid Grid.Row="10">
                        <CSRControls:CSRButton Height="60" Width="60" Command="{Binding SaveCustomerCmd}" Validation="True" Content="&#xE0ae;" FontFamily="Segoe UI Symbol" FontSize="18" Background="#d74f2a" Margin="-3" HorizontalAlignment="Right" IsEnabled="{Binding Path=CurrentCustomer.Dirty}" />
                    </Grid>
                </CSRPanels:CRSFormPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>

