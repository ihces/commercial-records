<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CSRControls="using:CommercialRecordSystem.Controls">

    <Style TargetType="CSRControls:CRSTextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CSRControls:CRSTextBox">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{TemplateBinding Height}"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Background="#008A00">
                            <TextBlock FontFamily="Segoe UI Symbol"   FontSize="{TemplateBinding FontSize}" FontWeight="{TemplateBinding FontWeight}" VerticalAlignment="Center" HorizontalAlignment="Stretch" Text="{TemplateBinding IconHex}" TextAlignment="Center" Foreground="White"></TextBlock>
                        </Grid>
                        <TextBox Grid.Column="1" Height="{TemplateBinding Height}" 
                                 FontSize="{TemplateBinding FontSize}" 
                                 FontWeight="{TemplateBinding FontWeight}" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Stretch" 
                                 TextAlignment="Center" 
                                 Foreground="White" 
                                 Background="#28ffffff"  
                                 BorderBrush="{TemplateBinding BorderBrush}"  
                                 BorderThickness="3"
                                 Text="{Binding Path={TemplateBinding TextBind}, Mode=TwoWay}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

